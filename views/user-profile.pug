extends layout

block content   

    .container
        h1.main-title #{title}
        hr
        .container
            .row
                .col-md-4
                    .card
                        div(style='position:relative')
                            button.btn.btn-outline-warning.btn-sm.mx-auto(style='display:block;position:absolute;bottom:5px') Update photo
                            img.card-img-top(style='width:100%; height:200px; object-fit:cover', src='uploads/profiles/'+userData.image, alt='Card image cap')
                        .card-body
                            h5.card-title Account Details
                        ul.list-group.list-group-flush
                            li.list-group-item 
                                span.text-muted Name:
                                span.ml-2= userData.name
                                button.btn.btn-outline-warning.btn-sm.float-right Change
                            li.list-group-item 
                                span.text-muted Email:
                                span.ml-2= userData.email
                                button.btn.btn-outline-warning.btn-sm.float-right Change
                            li.list-group-item 
                                span.text-muted Password
                                button.btn.btn-outline-warning.btn-sm.float-right Change
                        .card-body
                            button.btn.btn-outline-danger.btn-sm.mx-auto(style='display:block') Deactivate Account