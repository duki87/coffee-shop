extends layout

block content   
    include admin-navbar.pug

    .container
        h1 #{title}
        hr
        form(method='POST', action='/admin/products/add-product', enctype='multipart/form-data')
            .form-group
                label(for='title') Title
                input#title.form-control(type='text', placeholder='product title', name='title', required)
            .form-group
                label(for='description') Description
                textarea#title.form-control(placeholder='product description', name='description', required)
            .form-group
                label(for='price') Price
                input#price.form-control(type='text', placeholder='product price', name='price', required)
            .form-group
                label(for='discount') Discount
                input#price.form-control(type='text', placeholder='product discount', name='discount')
            .form-group
                label(for='stock') On Stock 
                br
                input#price(type='checkbox', value='true', name='stock', checked)                
            .form-group
                label(for='image') Image
                input#image.form-control(type='file', placeholder='product image', name='image', required)
            .form-group#previewImg
                label(for='') Image Preview
                br
                img#preview(src="", alt="" style="width:150px; height:auto;")
            .form-group.d-none#removeImg
                button.btn.btn-danger.btn-sm(type="button") Remove Image
            br
            .form-group
                button.btn.btn-success(type='submit') Add Product

